<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.fitzcode.admin.mapper.NoticeMapper">

    <!-- 공지사항 목록 조회 -->
    <select id="selectAllNotices" resultType="kr.co.fitzcode.admin.dto.NoticeDTO">
        SELECT * FROM NOTICE
        ORDER BY created_at DESC
    </select>

    <!-- 공지사항 작성 -->
    <insert id="insertNotice" parameterType="kr.co.fitzcode.admin.dto.NoticeDTO" useGeneratedKeys="true" keyProperty="noticeId">
        INSERT INTO NOTICE (user_id, title, content)
        VALUES (#{userId}, #{title}, #{content})
    </insert>

    <!-- 공지사항 조회 -->
    <select id="selectNoticeById" resultType="kr.co.fitzcode.admin.dto.NoticeDTO">
        SELECT * FROM NOTICE WHERE notice_id = #{noticeId}
    </select>

    <!-- 공지사항 수정 -->
    <update id="updateNotice" parameterType="kr.co.fitzcode.admin.dto.NoticeDTO">
        UPDATE NOTICE
        SET title = #{title}, content = #{content}, updated_at = CURRENT_TIMESTAMP
        WHERE notice_id = #{noticeId}
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice" parameterType="int">
        DELETE FROM NOTICE WHERE notice_id = #{noticeId}
    </delete>

</mapper>