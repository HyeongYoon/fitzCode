<mapper namespace="kr.co.fitzcode.mapper.UserMapper">
    <insert id="insertUser" parameterType="UserDto">
        INSERT INTO USER (user_name, nickname, email, password, phone_number, birth_date)
        VALUES (#{userName}, #{nickname}, #{email}, #{password}, #{phoneNumber}, #{birthDate});
    </insert>

